<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context="MainActivity"
    android:orientation="vertical">
        <com.example.customerqueue.ScrollTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewTop"
            android:fontFamily="sans-serif-black"

           />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/maunen">
    <LinearLayout
        android:id="@+id/lnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btRatot"
            android:text="RẤT TỐT"
            android:textSize="35dp"
            android:textColor="@color/colorPrimaryDark"/>
        <Button  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btTot"
            android:text="TỐT TỐT"
            android:textSize="35dp"
            android:textColor="@color/colorPrimaryDark"/>
        <Button  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btKhongtot"
            android:text="KHÔNG TỐT"
            android:textSize="35dp"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

        <TextView
            android:id="@+id/textCua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01"
            android:fontFamily="sans-serif-black"
            android:textSize="250dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" />

    </RelativeLayout>

    <com.example.customerqueue.ScrollTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:id="@+id/txtViewBot"

        />
</LinearLayout>